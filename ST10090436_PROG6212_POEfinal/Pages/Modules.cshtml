@page
@model ST10090436_PROG6212_POEfinal.Pages.ModulesModel
@{
}
<configuration>

    <!-- other setting -->

    <appSettings>
        <add key="enableSimpleMembership" value="true" />
    </appSettings>

    <!-- other settings -->

</configuration>

<!-- Title of page -->
<br />
<h2> List of Modules </h2>
<br/>

<!-- add a new module -->
<a class="btn btn-primary btn-sm" href='/AddModules'>Add New Modules</a>
<br/>

<!-- Creating a table -->
<table class="table">
    <thead>
        <tr>
            <th>Module Code</th>
            <th>Module Name</th>
            <th>Number of Credits</th>
            <th>Hours Per Week</th>
            <th>Start Date</th>
            <th>Number of Weeks</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.moduleList)
        {
            <tr>
                <td>@item.ModuleCode</td>
                <td>@item.ModuleName</td>
                <td>@item.NumOfCredits</td>
                <td>@item.HoursPerWeek</td>
                <td>@item.StartDate</td>
                <td>@item.NumOfWeeks</td>
                <td>
                    <a class="btn btn-danger btn-sm" href="/Delete?ModuleCode=@item.ModuleCode">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- checking hours spent -->
<a class="btn btn-primary btn-sm" href='/HoursSpent'>Check Hours</a>

